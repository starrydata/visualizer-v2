{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        // stremaliteのデバッグ用
        {
            "name": "streamlit",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${workspaceFolder}/streamlit_app.py",
            ],
            "env": {
                "STARRYDATA_BULK_DATA_API": "https://starrydata.github.io/bulk-data-api/v1/",
                "STARRYDATA2_API_XY_DATA": "https://www.starrydata2.org/paperlist/xy_data_api",
                "PYTHONPATH": "${workspaceFolder}/src/",
            },
            "python": "${workspaceFolder}/.venv/bin/python"
        },
        // pytest用
        {
            "name": "pytest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "src/tests/presentation/test_bokeh_graph_creator.py",
                "-v"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src/"
            },
            "python": "${workspaceFolder}/.venv/bin/python"
        },
    ]
}
